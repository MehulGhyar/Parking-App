<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_toLeftOf="@+id/parkingImage"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/parkingImage"
                android:layout_alignParentStart="true"
                >

                <TextView
                    android:id="@+id/parkingName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/parkingAddress"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:textSize="18sp"
                    android:maxLines="2"
                    />

                <TextView
                    android:id="@+id/parkingTime"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_baseline_time_24"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:id="@+id/parkingType"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="type"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/parkingImage"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/place_image"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/parkingEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit"
            android:background="@drawable/white_circle"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>